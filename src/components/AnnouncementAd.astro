---
interface AnnouncementAdProps {
  title: string;
  description: string;
  link: string;
}

const { title, description, link } = Astro.props as AnnouncementAdProps;
---

<div class="mb-4 border-l-4 border-yellow-500 bg-yellow-100 p-4">
  <div class="flex">
    <div class="ml-3">
      <h3 class="text-sm font-medium text-yellow-700">
        <a href={link} class="hover:underline">
          {title}
        </a>
      </h3>
      <div class="mt-2 text-sm text-yellow-700">
        <p>{description}</p>
      </div>
    </div>
  </div>
  <div class="m-3">
    <a href={link} class="text-skin-accent">Read More</a>
  </div>
</div>
