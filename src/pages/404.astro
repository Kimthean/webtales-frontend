---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import LinkButton from "@/components/LinkButton.astro";
---

<Layout title="404 Not Found">
  <Header />
  <main id="main-content" class="mx-auto flex max-w-3xl flex-1 items-center justify-center">
    <div class="mb-14 flex flex-col items-center justify-center">
      <h1 aria-label="404 Not Found" class="text-9xl font-bold text-skin-accent">404</h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p class="mt-4 text-2xl sm:text-3xl">Page Not Found</p>
      <LinkButton
        href="/"
        className="my-6 text-lg underline decoration-dashed underline-offset-8"
      >
        Go back home
      </LinkButton>
    </div>
  </main>
</Layout>

